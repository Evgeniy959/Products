<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="Style_Default" TargetType="Control">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    
    <Style x:Key="Style_Label" TargetType="Label"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Foreground" Value="Blue"/>
    </Style>
    
    <Style x:Key="Style_Input" TargetType="Control"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="200"/>
    </Style>
    
    <Style x:Key="Style_GroupButton" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="Style_Button" TargetType="Button"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Background" Value="Green"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Width" Value="75"/>
    </Style>
    
</ResourceDictionary>